# ===================================
# Bthwani Backend Environment Variables
# ===================================

# Environment
NODE_ENV=development
PORT=3000
API_PREFIX=api/v2

# Database
MONGODB_URI=mongodb://localhost:27017/bthwani
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bthwani?retryWrites=true&w=majority

# JWT Secrets (MUST be 32+ characters)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-here
JWT_EXPIRES_IN=7d

VENDOR_JWT_SECRET=your-vendor-jwt-secret-minimum-32-characters-long-here
VENDOR_JWT_EXPIRES_IN=30d

MARKETER_JWT_SECRET=your-marketer-jwt-secret-minimum-32-characters-long-here
MARKETER_JWT_EXPIRES_IN=30d

REFRESH_TOKEN_SECRET=your-refresh-token-secret-minimum-32-characters-long-here
REFRESH_TOKEN_EXPIRES_IN=30d

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Redis Configuration
# Required in production, optional in development
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_DB=0

# Cache Configuration
CACHE_TTL=600
CACHE_MAX_ITEMS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=debug

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# External APIs (Optional)
KURAIMI_API_URL=https://api.kuraimi.com
KURAIMI_API_KEY=your-kuraimi-api-key

# SMS Provider (Optional)
SMS_PROVIDER=local
SMS_API_KEY=

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@bthwani.com

