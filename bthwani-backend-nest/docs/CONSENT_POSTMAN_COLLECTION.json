{
  "info": {
    "name": "User Consent API",
    "description": "مجموعة Postman لاختبار نظام موافقات المستخدمين",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. تسجيل موافقة واحدة",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"consentType\": \"privacy_policy\",\n  \"granted\": true,\n  \"version\": \"1.0.0\",\n  \"notes\": \"موافقة على سياسة الخصوصية\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/consent",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "consent"]
        },
        "description": "تسجيل موافقة واحدة للمستخدم"
      }
    },
    {
      "name": "2. تسجيل موافقات متعددة",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"consents\": [\n    {\n      \"consentType\": \"privacy_policy\",\n      \"granted\": true,\n      \"version\": \"1.0.0\"\n    },\n    {\n      \"consentType\": \"terms_of_service\",\n      \"granted\": true,\n      \"version\": \"1.0.0\"\n    },\n    {\n      \"consentType\": \"marketing\",\n      \"granted\": false,\n      \"version\": \"1.0.0\"\n    },\n    {\n      \"consentType\": \"data_processing\",\n      \"granted\": true,\n      \"version\": \"1.0.0\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/consent/bulk",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "consent", "bulk"]
        },
        "description": "تسجيل موافقات متعددة دفعة واحدة"
      }
    },
    {
      "name": "3. الحصول على ملخص الموافقات",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/consent/summary",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "consent", "summary"]
        },
        "description": "جلب ملخص شامل لجميع موافقات المستخدم"
      }
    },
    {
      "name": "4. الحصول على سجل الموافقات",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/consent/history",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "consent", "history"]
        },
        "description": "جلب سجل كامل لجميع الموافقات"
      }
    },
    {
      "name": "5. سجل موافقات محددة (Privacy Policy)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/consent/history?type=privacy_policy",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "consent", "history"],
          "query": [
            {
              "key": "type",
              "value": "privacy_policy"
            }
          ]
        },
        "description": "جلب سجل موافقات سياسة الخصوصية فقط"
      }
    },
    {
      "name": "6. التحقق من موافقة محددة",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/auth/consent/check/marketing",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "consent", "check", "marketing"]
        },
        "description": "التحقق من موافقة التسويق"
      }
    },
    {
      "name": "7. سحب موافقة التسويق",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reason\": \"لا أرغب في تلقي رسائل تسويقية\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/consent/marketing",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "consent", "marketing"]
        },
        "description": "سحب موافقة التسويق"
      }
    },
    {
      "name": "8. سحب موافقة معالجة البيانات",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reason\": \"أريد إيقاف معالجة بياناتي\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/consent/data_processing",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "consent", "data_processing"]
        },
        "description": "سحب موافقة معالجة البيانات"
      }
    }
  ]
}

