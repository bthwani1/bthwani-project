{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,

    // خفّف الفحص قدر الإمكان:
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmitOnError": false,

    // اجعل TS يلتقط فقط مجلّد types/ لديك:
    "typeRoots": ["./src/types", "./node_modules/@types"],

    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/**/*.json", "src/types/**/*.ts"],
  "exclude": ["node_modules"]
}
