{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmitOnError": false,

    // ✳️ هنا: اجعل typeRoots يشمل مجلد التعريفات داخل src
    // "typeRoots": ["./src/types", "./node_modules/@types"],

    "outDir": "./dist",
    "rootDir": "./src"
  },
  // include بسيط يشمل كل src
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
